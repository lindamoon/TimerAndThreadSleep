<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.feima.timerandthreadsleep.MainActivity">
    <EditText
        android:inputType="number"
        android:id="@+id/et_frequency"
        android:hint="输入发送频率(单位:hz)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:onClick="timerSend"
        android:text="Timer发送"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:onClick="threadSend"
        android:text="Thread发送"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:onClick="handlerSend"
        android:text="Handler发送"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:onClick="stopSend"
        android:text="停止发送"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
